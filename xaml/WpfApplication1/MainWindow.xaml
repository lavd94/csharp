<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*" />
            <RowDefinition Height="279*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="489*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="1" Height="25" HorizontalAlignment="Stretch" Margin="1,4,0,0" Name="Menu1" VerticalAlignment="Top" Width="Auto" HorizontalContentAlignment="Stretch">
            <MenuItem Header="archivo" Name="MenuItem1">
                <MenuItem Header="nuevo" Click="nuevoClick" />
                <MenuItem Header="guardar" Click="guardarClick" />
                <MenuItem Header="abrir" Click="abrirClick"/>
                <MenuItem Header="salir" />
            </MenuItem>
            <MenuItem Header="edicion" />
            <MenuItem Header="fuente" />
        </Menu>
        <TextBox Grid.Column="1" Grid.Row="1" Height="279" HorizontalAlignment="Stretch" Margin="5,0,0,0" Name="document" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" />
    </Grid>
</Window>
